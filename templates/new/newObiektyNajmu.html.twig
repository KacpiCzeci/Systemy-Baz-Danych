{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                {{ form_start(form) }}
                {% if nazwa is defined %}
                    <h1>{{ nazwa }}</h1>
                {% endif %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible p-3 fade show" role="alert">
                        {{message}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible p-3 fade show" role="alert">
                        {{message}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                <h1></h1>
                <h5>Numer mieszkania</h5>
                {{ form_widget(form.Nr_mieszkania) }}
                {% if form.Nr_mieszkania.vars.errors|length %}
                    <div class="alert alert-danger alert-dismissible p-1 fade show" role="alert">
                        {{ form_errors(form.Nr_mieszkania) }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endif %}
                <h1></h1>
                <h5>Powierzchnia</h5>
                {{ form_widget(form.Powierzchnia) }}
                {% if form.Powierzchnia.vars.errors|length %}
                    <div class="alert alert-danger alert-dismissible p-1 fade show" role="alert">
                        {{ form_errors(form.Powierzchnia) }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endif %}
                <h1></h1>
                <h5>Rodzaj obiektu</h5>
                {{ form_widget(form.Rodzaj_obiektu) }}
                {% if form.Rodzaj_obiektu.vars.errors|length %}
                    <div class="alert alert-danger alert-dismissible p-1 fade show" role="alert">
                        {{ form_errors(form.Rodzaj_obiektu) }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endif %}
                <h1></h1>
                <h5>Liczba pokoi</h5>
                {{ form_widget(form.Liczba_pokoi) }}
                {% if form.Liczba_pokoi.vars.errors|length %}
                    <div class="alert alert-danger alert-dismissible p-1 fade show" role="alert">
                        {{ form_errors(form.Liczba_pokoi) }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endif %}
                <h1></h1>
                <h5>Typ mieszkania</h5>
                {{ form_widget(form.Typ_mieszkania) }}
                {% if form.Typ_mieszkania.vars.errors|length %}
                    <div class="alert alert-danger alert-dismissible p-1 fade show" role="alert">
                        {{ form_errors(form.Typ_mieszkania) }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endif %}
                <h1></h1>
                <h5>Numer pokoju</h5>
                {{ form_widget(form.Nr_pokoju) }}
                {% if form.Nr_pokoju.vars.errors|length %}
                    <div class="alert alert-danger alert-dismissible p-1 fade show" role="alert">
                        {{ form_errors(form.Nr_pokoju) }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endif %}
                <h1></h1>
                <h5>Adres</h5>
                {{ form_widget(form.Adres) }}
                {% if form.Adres.vars.errors|length %}
                    <div class="alert alert-danger alert-dismissible p-1 fade show" role="alert">
                        {{ form_errors(form.Adres) }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endif %}
                <h1></h1>
                <button class="btn btn-primary btn-lg" type="submit">Zatwierd≈∫</button>
                {% if ok %}
                    <a href="/sbd-projekt/public/WyswietlObiektyNajmu" class="btn btn-primary btn-lg" role="button">Cofnij</a>
                {% else %}
                    <a href="/sbd-projekt/public" class="btn btn-primary btn-lg" role="button">Cofnij</a>
                {% endif %}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}