{% extends 'base.html.twig' %}

{% block title %}Umowy{% endblock %}

{% block body %}
<div class="cointainer">
    <a href="/sbd-projekt/public/NowyObiektNajmu" class="btn btn-primary btn-lg" role="button">Dodaj</a>
    <button onClick="window.history.back();" class="btn btn-primary btn-lg" type="button">Cofnij</button>
</div>

    {% if obiektynajmu %}
        <table id="umowy" class="table table-striped">
        <thead>
            <tr>
                <th>Obiekt Najmu</th>
                <th>Adres</th>
                <th>Opcje</th>
            </tr>
        </thead>
        <tbody>
            {% for obiekt in obiektynajmu %}
                <tr>
                    <td>{{ obiekt.getRodzajObiektu() }}</td>
                    <td>{{ obiekt.getAdres() ~ " / " ~ obiekt.getNrMieszkania() }}</td>
                    <td>
                        <a href="/sbd-projekt/public/WyswietlObiektyNajmu/{{ obiekt.getMieszkanie() }}" class="btn btn-dark">Szczegóły</a>
                        <a href="/sbd-projekt/public/WyswietlObiektyNajmu/delete/{{ obiekt.getMieszkanie() }}" class="btn btn-danger">Usuń</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        </table>
    {% else %}
        <p>Brak umów do wyświetlenia</p>
    {% endif %}
{% endblock %}